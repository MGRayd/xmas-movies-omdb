rules_version = '2';

service cloud.firestore {
  // Helper function to check if the user is an admin
  function isAdmin() {
    return request.auth != null && 
      (request.auth.token.admin == true || 
       exists(/databases/{database}/documents/admins/$(request.auth.uid)));
  }
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      // Owner-only access to profile documents
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User movies subcollection
      match /movies/{movieId} {
        // READ:
        //  - owner
        //  - OR anyone if the owner has a public watchlist (checked via users doc)
        allow read: if
          (request.auth != null && request.auth.uid == userId) ||
          (
            get(/databases/$(database)/documents/users/$(userId))
              .data.isPublicWatchlist == true
          );

        // WRITE: only the owner
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User achievements subcollection - users can only access their own achievements
      match /achievements/{achievementId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Movies collection - publicly readable, authenticated writes
    match /movies/{movieId} {
      // Anyone can read movie metadata (needed for public watchlists)
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        ((request.auth.uid != null && exists(/databases/{database}/documents/userMovies/$(request.auth.uid + '_' + movieId))) || isAdmin());
      allow delete: if request.auth != null && 
        ((request.auth.uid != null && exists(/databases/{database}/documents/userMovies/$(request.auth.uid + '_' + movieId))) || isAdmin());
    }

    // Public profiles collection - safe, public-facing data only
    match /publicProfiles/{slug} {
      // Anyone can read public profiles
      allow read: if true;

      // Only the owner of the profile can write/update their own public profile
      allow write: if request.auth != null
        && request.resource.data.userId == request.auth.uid;
    }
    
    // UserMovies collection - users can only access their own data
    match /userMovies/{userMovieId} {
      allow read: if request.auth != null && 
        (userMovieId.matches(request.auth.uid + "_.*") || isAdmin());
      allow write: if request.auth != null && 
        (userMovieId.matches(request.auth.uid + "_.*") || isAdmin());
    }
    
    // MovieLists collection - users can only access their own lists unless marked as public
    match /movieLists/{listId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || resource.data.isPublic == true || isAdmin());
      allow create: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Watchmode streaming cache - safe, derived data only
    match /watchmodeSources/{movieId} {
      // Anyone can read cached streaming availability
      allow read: if true;

      // Allow client-side writes so public pages can populate/refresh cache
      allow write: if true;
    }
	
	// Global stats document (for aggregate counters like watchedTotal)
    match /stats/global {
      // Allow anyone to read the total (or require auth if you prefer)
      allow read: if true;

      // Allow create by authenticated users (ensures doc exists)
      allow create: if request.auth != null
        && request.resource.data.keys().hasOnly(['watchedTotal','updatedAt'])
        && request.resource.data.watchedTotal is int
        && request.resource.data.watchedTotal >= 0;

      // Allow atomic +1 / -1 updates by authenticated users
      allow update: if request.auth != null
        && request.resource.data.keys().hasOnly(['watchedTotal','updatedAt'])
        && request.resource.data.watchedTotal is int
        && resource.data.watchedTotal is int
        && (
          request.resource.data.watchedTotal ==
            resource.data.watchedTotal + 1
          ||
          request.resource.data.watchedTotal ==
            resource.data.watchedTotal - 1
        );

      // Prevent deletes
      allow delete: if false;
    }

	// Movie Requests collection
	match /Requests/{requestId} {
	  // Any signed-in user can create a request for themselves
	  allow create: if request.auth != null
	    && request.resource.data.userId == request.auth.uid
	    && request.resource.data.status == 'pending';

	  // Users can read their own requests; admins can read all
	  allow read: if request.auth != null
	    && (resource.data.userId == request.auth.uid || isAdmin());

	  // Only admins can modify or delete requests
	  allow update, delete: if isAdmin();
	}
    
    // Admin collection - only admins can access
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}