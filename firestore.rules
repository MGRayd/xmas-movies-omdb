rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule - deny access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Questions collection - admin only
    match /questions/{questionId} {
      allow read: if true; // Anyone can read questions
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Rounds collection - admin only
    match /rounds/{roundId} {
      allow read: if true; // Anyone can read rounds
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Scores collection - public read, authenticated write
    match /scores/{scoreId} {
      allow read: if true; // Anyone can read scores
      allow create: if true; // Anyone can submit a score
      allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - admin only
    match /admins/{userId} {
      // Allow reading your own admin document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Special rule for first admin - if no admins exist, allow creation of first admin document
      // This is a development-friendly rule and should be removed in production
      allow create: if request.auth != null && 
                     request.auth.uid == userId && 
                     request.resource.data.email == request.auth.token.email;
      
      // Once admins exist, only admins can create other admins
      allow update, delete: if request.auth != null && 
                              exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
