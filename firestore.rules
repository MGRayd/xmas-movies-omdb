rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User movies subcollection - users can only access their own data
      match /movies/{movieId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Movies collection - anyone can read, only authenticated users can create
    match /movies/{movieId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        exists(/databases/{database}/documents/userMovies/request.auth.uid + '_' + movieId);
    }
    
    // UserMovies collection - users can only access their own data
    match /userMovies/{userMovieId} {
      allow read: if request.auth != null && 
        userMovieId.matches(request.auth.uid + "_.*");
      allow write: if request.auth != null && 
        userMovieId.matches(request.auth.uid + "_.*");
    }
    
    // MovieLists collection - users can only access their own lists unless marked as public
    match /movieLists/{listId} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || resource.data.isPublic == true);
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}
